<Window x:Class="WeekDateCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Week Date Wizard"
        Width="660"
        Height="540"
        MinWidth="620"
        MinHeight="500"
        Icon="appicon.ico"
        Background="#F4F6F8"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1B2430" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#0F766E" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="BorderBrush" Value="#0F766E" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="BorderBrush" Value="#CBD5E1" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="280" />
            <RowDefinition Height="6" />
            <RowDefinition Height="170" MinHeight="120" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                CornerRadius="12"
                Padding="12">
            <TabControl x:Name="MainTabControl">
                <TabItem Header="Week Difference">
                    <StackPanel Margin="6">
                        <TextBlock FontWeight="SemiBold" FontSize="14" Text="Enter two dates (DD/MM/YYYY or DD.MM.YYYY)" Margin="0,0,0,10" />
                        <WrapPanel Margin="0,0,0,10">
                            <TextBox x:Name="DateAInput" Width="160" ToolTip="Example: 25/02/2026" />
                            <TextBox x:Name="DateBInput" Width="160" ToolTip="Example: 12.03.2026" />
                            <Button Content="Calculate" Click="CalculateDifference_Click" />
                        </WrapPanel>
                        <TextBlock x:Name="DifferenceResultText" FontSize="20" FontWeight="Bold" Margin="0,2,0,4" Text="-" />
                        <TextBlock x:Name="DifferenceStatusText" Foreground="#B91C1C" />
                    </StackPanel>
                </TabItem>

                <TabItem Header="Add / Deduct Weeks">
                    <StackPanel Margin="6">
                        <TextBlock FontWeight="SemiBold" FontSize="14" Text="Start date + weeks (negative for deduct)" Margin="0,0,0,10" />
                        <WrapPanel Margin="0,0,0,10">
                            <TextBox x:Name="BaseDateInput" Width="160" ToolTip="DD/MM/YYYY or DD.MM.YYYY" />
                            <TextBox x:Name="WeeksToAddInput" Width="120" ToolTip="Example: 5 or -5" />
                            <Button Content="Calculate" Click="CalculateShift_Click" />
                        </WrapPanel>
                        <TextBlock x:Name="ShiftResultText" FontSize="20" FontWeight="Bold" Margin="0,2,0,4" Text="-" />
                        <TextBlock x:Name="ShiftStatusText" Foreground="#B91C1C" />
                    </StackPanel>
                </TabItem>

                <TabItem Header="Row Calculator">
                    <DockPanel Margin="6">
                        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                            <TextBlock FontWeight="SemiBold" FontSize="14" Text="Type dates below each other. Weeks are compared to previous row." Margin="0,0,0,6" />
                            <Button Width="180" Content="Save Current List" Click="SaveSequenceSnapshot_Click" />
                            <TextBlock x:Name="SequenceStatusText" Margin="0,6,0,0" Foreground="#065F46" />
                        </StackPanel>

                        <DataGrid x:Name="SequenceGrid"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  MinHeight="220"
                                  RowHeaderWidth="0"
                                  ItemsSource="{Binding SequenceRows}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Width="115"
                                                    Binding="{Binding DateInput, UpdateSourceTrigger=PropertyChanged}" />
                                <DataGridTextColumn Header="Weeks vs Prev" Width="*"
                                                    IsReadOnly="True"
                                                    Binding="{Binding WeekDifference}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </TabItem>
            </TabControl>
        </Border>

        <GridSplitter Grid.Row="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Height="6"
                      Background="#CBD5E1"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="True" />

        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                CornerRadius="12"
                Padding="10">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="History" FontSize="16" FontWeight="Bold" Margin="0,4,10,0" />
                    <TextBox x:Name="HistoryFilterInput"
                             Width="260"
                             Margin="0,0,10,0"
                             ToolTip="Search input/result"
                             TextChanged="HistoryFilterInput_TextChanged" />
                    <Button Content="Clear History" Width="120" Click="ClearHistory_Click" />
                </StackPanel>

                <ListView x:Name="HistoryListView" MouseDoubleClick="HistoryListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="160" Header="Time" DisplayMemberBinding="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                            <GridViewColumn Width="110" Header="Mode" DisplayMemberBinding="{Binding Mode}" />
                            <GridViewColumn Width="180" Header="Input" DisplayMemberBinding="{Binding Input}" />
                            <GridViewColumn Width="180" Header="Result" DisplayMemberBinding="{Binding Result}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </Border>
    </Grid>
</Window>
